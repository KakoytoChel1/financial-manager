<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Financial_Manager.Client.View.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        >

    <Grid>
        <NavigationView x:ConnectionId='2' 
            x:Name="mainNavigationView"
            Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            IsPaneOpen="False"
                                                                  >
            
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' x:Name="profileNavItem" Icon="Contact" Content="Profile" Tag="Profile"/>
                <NavigationViewItem x:ConnectionId='4' x:Name="financialNavItem" Icon="Calculator" Content="Financials" Tag="Financials"/>
                <NavigationViewItem x:ConnectionId='5' x:Name="categoriesNavItem" Icon="Library" Content="Categories" Tag="Categories"/>
            </NavigationView.MenuItems>
            
            <Frame x:ConnectionId='6' 
                x:Name="contentFrame"/>
        </NavigationView>
    </Grid>
</Page>

