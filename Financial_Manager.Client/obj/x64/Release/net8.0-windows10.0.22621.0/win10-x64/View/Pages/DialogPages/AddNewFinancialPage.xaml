<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Financial_Manager.Client.View.Pages.DialogPages.AddNewFinancialPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Financial_Manager.Client.View.Pages.DialogPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel 
            Spacing="10"
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch">

            <!--Title-->
            <TextBox x:ConnectionId='2'
                Header="Title"
                MaxWidth="300"
                PlaceholderText="Enter the title"
                                                                        />

            <!--Amount-->
            <NumberBox x:ConnectionId='3'
                Header="Amount"
                SpinButtonPlacementMode="Inline"
                SmallChange="10"
                                                                          />

            <!--Currencies-->
            <ComboBox x:ConnectionId='4'
                Header="Currency"
                SelectedIndex="0"
                                                                                           
                                                              >

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Spacing="10"
                            Orientation="Horizontal">

                            <TextBlock
                                Text="{Binding Title}"/>

                            <ImageIcon
                                Width="20"
                                Source="{Binding IconPath}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!--Types-->
            <ComboBox x:ConnectionId='5'
                Header="Type"
                                                                                             >
                
                <ComboBoxItem>
                    <StackPanel
                        Spacing="10"
                        Orientation="Horizontal">

                        <TextBlock
                            Text="Income"/>

                        <ImageIcon
                            Width="20"
                            Source="../../Assets/income.png"/>
                    </StackPanel>
                </ComboBoxItem>

                <ComboBoxItem>
                    <StackPanel
                        Spacing="10"
                        Orientation="Horizontal">

                        <TextBlock
                            Text="Expenses"/>

                        <ImageIcon
                            Width="20"
                            Source="../../Assets/expenses.png"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>

            <!--Categories-->
            <ComboBox x:ConnectionId='6'
                Header="Category"
                SelectedIndex="0"
                                                                                           
                Width="170"
                                                                            >

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Text="Description"/>

            <ScrollViewer
                VerticalScrollBarVisibility="Auto" 
                HorizontalScrollBarVisibility="Auto">

                <TextBox x:ConnectionId='7'
                    AcceptsReturn="True"
                    MaxWidth="300"
                    MaxHeight="300"
                    PlaceholderText="Enter the description (optional)"
                    TextWrapping="Wrap"
                                                                                  />
            </ScrollViewer>

        </StackPanel>
    </Grid>
</Page>

